<FlatButton@ButtonBehavior+Label>:
    font_size: 16
<Tbutton@ToggleButton>

<Admindashboardwindow>:
    BoxLayout:
        orientation: 'vertical'
        id: main_win
        spacing: 5
        space_x: self.size[0]/3
        canvas.before:
            Color:
                rgba: (1,1,1, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            size_hint_y: None
            height: 30
            canvas.before:
                Color:
                    rgba: (.769,.604,.286, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                text: "Admin DashBoard"
                bold: True
                size_hint_x : .7
            FlatButton:
                text: 'Logout'
                size_hint_x: .1

        BoxLayout:
            size_hint_y: None
            height: 30
            canvas.before:
                Color:
                    rgba: (.769,.604,.286, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                id: page_title
                text: ""
                bold: True
                markup: True
                size_hint_x : .7

        BoxLayout:
            BoxLayout:
                id: admin_menu

                orientation: 'vertical'
                size_hint_x: .2
                canvas.before:
                    Color:
                        rgba: (.769,.604,.286, 1)
                    Rectangle:
                        size: self.size
                        pos: self.pos

                Tbutton:
                    pos: .125*root.width, .125*root.height
                    text: 'Manage User'
                    group: 'admin_menu'
                    size_hint_y: .1
                    on_state: root.change_screen(self)

                Tbutton:
                    pos: .125*root.width, .125*root.height
                    text: 'Manage Products'
                    group: 'admin_menu'
                    size_hint_y: .1
                    on_state: root.change_screen(self)

                Tbutton:
                    pos: .125*root.width, .125*root.height
                    text: 'View Sales'
                    group: 'admin_menu'
                    size_hint_y: .1
                    on_state: root.change_screen(self)

                Tbutton:
                    pos: .125*root.width, .125*root.height
                    text: 'View Customers'
                    group: 'admin_menu'
                    size_hint_y: .1
                    on_state: root.change_screen(self)

                Tbutton:
                    pos: .125*root.width, .125*root.height
                    text: 'View Stock'
                    group: 'admin_menu'
                    size_hint_y: .1
                    on_state: root.change_screen(self)

                Tbutton:
                    pos: .125*root.width, .125*root.height
                    text: 'Manage Expenditure'
                    group: 'admin_menu'
                    size_hint_y: .1
                    on_state: root.change_screen(self)

                Tbutton:
                    pos: .125*root.width, .125*root.height
                    text: 'Shop Config Setting'
                    group: 'admin_menu'
                    size_hint_y: .1
                    on_state: root.change_screen(self)

                Label:
                    id: sp
                    text: ''
                    size_hint_y: .5

            BoxLayout:
                id: admin_content_area
                size_hint_x: .8
                padding: (20, 10)
                ScreenManager:
                    id: scrn_mnger
                    Screen:
                        id: scrn_all_stock
                        name: 'scrn_all_stock'

                    Screen:
                        id: scrn_all_sales
                        name: 'scrn_all_sales'

                    Screen:
                        id: scrn_all_customers
                        name: 'scrn_all_customers'

                    Screen:
                        id: scrn_manage_product
                        name: 'scrn_manage_product'

                        BoxLayout:
                            orientation: "vertical"

                            BoxLayout:
                                id: scrn_manage_products

                            BoxLayout:
                                id: Operations_fields_products
                                size_hint_y: None
                                height: 35
                                spacing: 10
                            BoxLayout:
                                id: Ops_btn
                                spacing: 10
                                size_hint_y: None
                                height: 45

                                Button:
                                    id: crud_add_product
                                    text: 'Add Products'
                                    on_release: root.add_products_fields()
                                Button:
                                    id: crud_modify_product
                                    text: 'Modify Products'
                                    on_release: root.update_products_fields()

                    Screen:
                        id: scrn_manage_user
                        name: 'scrn_manage_user'
                        BoxLayout:
                            orientation: "vertical"

                            BoxLayout:
                                id: scrn_manage_users

                            BoxLayout:
                                id: info_label
                                spacing: 10
                                Label:
                                    id: info
                                    markup: True
                                    text: ''
                                    size_hint_y: None
                                    height: 20
                            BoxLayout:
                                id: Operations_fields
                                size_hint_y: None
                                height: 35
                                spacing: 10

                            BoxLayout:
                                id: Ops_btn
                                spacing: 10
                                size_hint_y: None
                                height: 45

                                Button:
                                    id: crud_add
                                    text: 'Add Sales Rep'
                                    on_release: root.add_users_fields()

                                Button:
                                    id: crud_modify
                                    text: 'Modify Profile'
                                    on_release: root.update_users_fields()

                    Screen:
                        id: scrn_shop_config
                        name: 'scrn_shop_config'
                        BoxLayout:
                            size_hint_y: .7
                            orientation: "vertical"
                            spacing: 10
                            Label:
                                id: info
                                markup: True
                                text: ''
                                size_hint_y: None
                                height: 20
                            BoxLayout:
                                id: shop_config_content
                                orientation: "vertical"
                                size_hint_y: .2
                                #height: 10
                                canvas.before:
                                    Color:
                                        rgba: (1,1,1, 1)
                                    Rectangle:
                                        size: self.size
                                        pos: self.pos

                                TextInput:
                                    id: shop_name
                                    hint_text: "Shop Name"
                                    multiline: False
                                    focus: True
                                    on_text_validate: Owner_name.focus = True
                                TextInput:
                                    id: Owner_name
                                    hint_text: "Owner's Name"
                                    multiline: False
                                    on_text_validate: owner_phone.focus = True

                                TextInput:
                                    id: owner_phone
                                    hint_text: "Phone Number"
                                    multiline: False
                                    on_text_validate: email.focus = True

                                TextInput:
                                    id: email
                                    hint_text: "Shop Owner's Email"
                                    multiline: False
                                    on_text_validate: shop_init_capital.focus = True
                                TextInput:
                                    id: shop_init_capital
                                    hint_text: "Initial Capital"
                                    multiline: False
                                    on_text_validate: shop_address.focus = True

                                TextInput:
                                    id: shop_address
                                    hint_text: "Shop Address"
                                    multiline: False
                                    on_text_validate: root.saveSettings()


                                Button:
                                    text: "Save Settings"
                                    size_hint_y: None
                                    height: 30
                                    background_color: (.180,.733, .322, 1)
                                    on_release: root.saveShop_init_data()
                                Label:
                                    size_hint_y: .8
                                    id: sp2

                    # Screen For Expenses Here
                    Screen:
                        id: scrn_all_expenses
                        name: 'scrn_all_expenses'
                        BoxLayout:
                            orientation: 'horizontal'
                            padding: 10
                            spacing: 10
                            BoxLayout:
                                orientation: 'vertical'

                                BoxLayout:
                                    orientation: 'vertical'
                                    id: scrn_expense_input
                                    #size_hint_x: .5
                                    size_hint_y: .5

                                    TextInput:
                                        id: exp_name
                                        hint_text: "Expense Name"
                                        multiline: False
                                        on_text_validate: exp_descript.focus = True

                                    TextInput:
                                        id: exp_descript
                                        hint_text: 'Expenses Details'
                                        multiline: False
                                        on_text_validate: exp_cost.focus = True

                                    TextInput:
                                        id: exp_cost
                                        hint_text: "Amount"
                                        multiline: False
                                        on_text_validate: root.saveExp()
                                    Label:
                                        id: sp
                                        size_hint_y: .3
                                        #height: 40
                                    Button:
                                        text: "Record Expenses"
                                        size_hint_y: None
                                        height: 40
                                        background_color: (.180,.733, .322, 1)
                                        #on_release: root.StartTable()
                                        on_release: root.saveExp()
                                    Label:
                                        id: sp2
                                        size_hint_y: .2

                                    BoxLayout:
                                        orientation: 'horizontal'
                                        id : scrn_display_sales_income
                                        canvas.before:
                                            Color:
                                                rgba: (.769,.604,.286, 1)
                                            Rectangle:
                                                size: self.size
                                                pos: self.pos
                                        BoxLayout:
                                            orientation: 'vertical'
                                            BoxLayout:
                                                id: scrn_capitals
                                                Label:
                                                    id: scrn_capital
                                                    text: 'Initial capital'
                                                    markup: True

                                            BoxLayout:
                                                id: scrn_total_sales
                                                Label:
                                                    id: scrn_total_sale
                                                    text: 'Total Sales'
                                                    markup: True





                                        BoxLayout:
                                            orientation: 'vertical'
                                            BoxLayout:
                                                id: scrn_total_cost_units
                                                Label:
                                                    id: scrn_total_cost_unit
                                                    text: 'Total Units Cost'
                                                    markup: True

                                            BoxLayout:
                                                id: scrn_total_expenses
                                                Label:
                                                    id: scrn_total_expense
                                                    text: 'Total Expenses'
                                                    markup: True


                                        BoxLayout:
                                            orientation: 'vertical'
                                            BoxLayout:
                                                id: scrn_current_incomes
                                                Label:
                                                    id: scrn_current_income
                                                    text: 'Income'
                                                    markup: True


                                            BoxLayout:
                                                id: scrn_current_profits
                                                Label:
                                                    id: scrn_current_profit
                                                    text: 'Profit'
                                                    markup: True



                            BoxLayout:
                                id: scrn_expense_output
                                size_hint_x: .5
                                canvas.before:
                                    Color:
                                        rgba: (.769,.604,.286, 1)
                                    Rectangle:
                                        size: self.size
                                        pos: self.pos
        BoxLayout:
            id: admin_footer

            size_hint_y: None
            height: 30
            canvas.before:
                Color:
                    rgba: (.769,.604,.286, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                id: foot_section
                text: ''
                markup: True
                size_hint_y: None
                height: 30
