<FlatButton@ButtonBehavior+Label>:
   font_size: 16

<Signinwidows>:
   id: main_win
   orientation: "vertical"
   spacing: 10
   space_x: self.size[0]/3
   canvas.before:
      Color:
         rgba: (1,1,1, 1)
      Rectangle:
         size: self.size
         pos: self.pos

   BoxLayout:
      size_hint_y: None
      height: 50
      canvas.before:
         Color:
            rgba: (.769,.604,.286, 1)
         Rectangle:
            size: self.size
            pos: self.pos
      Label:
         text: "Control Panel Login"
         bold: True
         size_hint_x : .7
      Button:
         id: new_admin_account
         text: "Create Account"
         bold: True
         size_hint_x : .2
         background_color: (.180,.733, .322, 1)
         on_release: AdminAccoutWindows.saveAdmin()
      FlatButton:
         text: 'X'
         size_hint_x: .1


   BoxLayout:
      orientation: 'vertical'
      padding: main_win.space_x, 10
      #spacing: 20
      BoxLayout:
         orientation: "vertical"
         spacing: 10
         size_hint_y: None
         height: 100
         Label:
            id: info
            markup: True
            text: ''
         TextInput:
            id: username_field
            hint_text: "Username"
            multiline: False
            focus: True
            on_text_validate: password_field.focus = True
         TextInput:
            id: password_field
            hint_text: "Password"
            multiline: False
            password: True
            on_text_validate: root.validate_user()
      Label:
         id: sp
         size_hint_y: None
         height: 40
      Button:
         text: "Sign In"
         size_hint_y: None
         height: 40
         background_color: (.180,.733, .322, 1)
         on_release: root.validate_user()
      Label:
         id: sp2